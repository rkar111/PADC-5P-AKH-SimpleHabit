<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topic_card_size"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/topic_card_size">

        <ImageView
            android:id="@+id/iv_topic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fogforest"
            android:tint="@color/tint_black" />

        <ImageView
            android:id="@+id/iv_topic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_spa_32dp" />

        <TextView
            android:id="@+id/tv_topic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_topic_desc"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:layout_toEndOf="@id/iv_topic_type"
            android:text="@string/well_being"
            android:textColor="@color/all_white"
            android:textSize="@dimen/text_regular_3x" />

        <TextView
            android:id="@+id/tv_topic_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_topic_type"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:layout_toEndOf="@id/iv_topic_type"
            android:text="@string/topic_desc"
            android:textColor="@color/all_white" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
