<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_evening_meditation"
        android:layout_width="@dimen/card_picture_size"
        android:layout_height="@dimen/card_picture_size"
        app:cardCornerRadius="@dimen/margin_small"
        app:cardElevation="@dimen/margin_medium">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_meditation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/yogabeach" />

            <ImageView
                android:id="@+id/btn_add_evening_meditation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/ic_add_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_meditation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_evening_meditation"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/mindful_sleep"
        android:textColor="@color/all_white"
        android:textSize="@dimen/text_regular" />

    <TextView
        android:id="@+id/meditation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_meditation_name"
        android:layout_marginLeft="@dimen/margin_medium"
        android:text="@string/time"
        android:textColor="@color/all_white" />


</RelativeLayout>